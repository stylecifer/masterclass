
body 
	font-family 'Roboto', arial, sans-serif
.beneficios
	article
		padding-top 10%
		height 80vh
	
	
	.evaluaciones
		.right__copy
			max-width 30vw
			
		color #004491
		background-color white 
		display flex
		h2
		p
		ul.tipos__eval
			max-width 30vw
			display inline-block			
			list-style-type none
		ul.tipos__eval
			margin-top -6px
		figure
			float left
			width 40vw
			margin-right 14%
			margin-left 2%
			
	figure
		
		width 50vw
		margin 0		
		img
			max-height 70vh
	h2
		max-width 30vw
	.plan__lector
	.plan__curricular		
		padding-left 8%
		background #004491		
		color white
		figure
			float right
		h2				
		p	
			max-width 30vw
.clientes
	text-align center
	margin-top 8%
	p 
		white-space pre
	height 90vh
.cta
	background linear-gradient(to bottom, #ff5300 0%,#ff8300 100%)
	color white
	padding 12px 30px
	border-radius 7px
	text-decoration none	
.darkblue__soporte
	padding-top 8%
	padding-bottom 8%
	background-color rgba(0, 3, 60, 0.59)
	width 100%
	height 80vh			
.darkblue__header
	text-align center
	color white	
	display flex
	align-items center
	justify-content center
	background-color rgba(0, 3, 60, 0.59)
	width 100%
	height 100%	
.description
	font-size 1.7em
	font-weight 300

h2
	font-weight 100
	
header	
	background  url('img/masterclass__cover.jpg') 63% bottom
	height 100vh	
	h1
		display none
	h2 
		font-size 4em		
	img 
		max-width 24%	
.header
	max-width 880px
.login
	color #00abfc
nav 
	text-align right	
	color white
	position absolute
	width 100vw
	li
		display inline-block
		margin-right 1em
.soporte 
	background url('img/soporte__masterclass.jpg') center center
	background-size cover
	
	text-align center
	color white
	a 
		white-space pre
		color #ff684a
.contacto
	background url('img/team-jumping.jpg') center center no-repeat 
	background-size cover
	text-align center
	height 80vw
	margin 0
	color #004491	
	.light__screen
		padding-top 8%
		background-color rgba(255, 254, 247, 0.7)
		width 100%
		height 100%
		display flex 
		justify-content center
		.float__center
			width 60%
			p
				text-align left
			ul 
				margin 0
				padding 0
				display flex
				justify-content space-between
footer
	background-color #004491
	height 100px
	margin 0
	padding 10px
	text-align center
	display flex
	text-items center
	color white
	
//form
#inline
	//display none
	width 70%
	background #c1c1c1
	padding 10px
label
	margin-right 12px
	margin-bottom 9px
.txt 
	display inline-block
	color #676767
	width 38%
	margin-bottom 10px 
	border 1px dotted #ccc
	padding 5px 9px
	font-size 1.2em
	line-height 1.4em
	margin-right 6px
.flex__form__jefe
	.txt
		width 48%

.txtarea
	display block
	resize none
	color #676767	
	margin-bottom 10px
	width 500px 
	height 150px
	border 1px dotted #ccc
	padding 5px 9px
	font-size 1.2em
	line-height 1.4em
.txt:focus
.txtarea:focus
	border-style solid
	border-color #bababa
	color #444

input.error
textarea.error 
	border-color #973d3d border-style solid background #f0bebe color #a35959
input.error:focus
textarea.error:focus
	border-color #973d3d color #a35959

#send 
	height 38px
	color white
	display block
	cursor pointer
	padding 0 11px
	font-size 1.1em
	border 0
	border-radius 7px
	background linear-gradient(to bottom, #ff5300 0%,#ff8300 100%)
.jefe__bottom
	width 99%
	
#send:hover 
	background #183d80

#send:active 
	color #8c9dc0
.profe__form
	font-size 1em 	
	text-align center
.jefe__form 
	font-size 1.3em 
	text-align center
	span 
		font-size 0.8em
		
.flex__form
.flex__form__jefe
	display flex
	justify-content space-around

	
	
@media screen and (max-width: 768px)
	.beneficios
		figure
			overflow inherit
			width 100%
			float none
			img
				max-width 70vw				
		.plan__lector 
		.plan__curricular
		.evaluaciones	
			padding-left 16%				
			h2
			p
				max-width 70vw
				
		.evaluaciones
			display block
			.right__copy
				max-width 70vw
			figure
				margin-left 0
@media screen and (max-width: 360px)
	nav 
		display none
	header
		
		background transparent url("img/masterclass__cover.jpg") no-repeat scroll 51% bottom
		background-size 580%
		h2
			font-size 2.4em
		.description
			font-size 1.3em
	.header
		padding 0 8px
	.brand
		margin-top 40%
		max-width 44%
	p.bottom
		margin-top 10%
		margin-bottom 14%
	.beneficios
		.plan__lector 
		.plan__curricular
		.evaluaciones
			height 100%
			display block
			padding-bottom 8px
		.evaluaciones
			ul.tipos__eval
				max-width 70vw
	.clientes
	.soporte
	.contacto	
		height 100%
	.darkblue__soporte
		height 100%
	.contacto .light__screen .float__center
		width 80%
	.contacto .light__screen .float__center ul
		display block
	.clientes
		padding-bottom 50px
				
				